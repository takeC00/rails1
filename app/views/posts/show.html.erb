<h3>ユーザー詳細</h3>

<table border="1">
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.startday %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @post.endday %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @post.allday %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @post.contents %></td>
  </tr>

</table>

<div>
  <ul>
    <li><%= link_to "ユーザー情報一覧に戻る", :posts %></li>
  </ul>
</div>