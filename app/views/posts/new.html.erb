<h3>スケジュール新規作成</h3>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"タイトル" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :startday ,"開始日" %></th>
      <td><%= f.date_field :startday %></td>
    </tr>

    <tr>
      <th><%= f.label :endday ,"終了日" %></th>
      <td><%= f.date_field :endday %></td>
    </tr>

    <tr>
      <th><%= f.label :allday ,"終日" %></th>
      <td><%= f.check_box :allday ,{checked: true}, "true", "false" %></td>
    </tr>

    <tr>
      <th><%= f.label :content ,"スケジュールメモ" %></th>
      <td><%= f.text_area :content %></td>
    </tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "登録"%></li>
      <li><%= link_to "一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>

<p><%= link_to "ユーザー新規登録", :new_post %></p>