<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= l post.startday %></td>
        <td><%= l post.endday %></td>
        <td class="allday"><%= if post.allday == true
                  p "○"
                else
                  p ""
                end%></td>
        <td><%= l post.updated_at %></td>
        <td>
          <%= link_to "確認", post %>
        </td>
        <td>
          <%= link_to "編集", [:edit, post] %>
        </td>
        <td>
          <%= link_to "削除", post, method: :delete, data:{ confirm:"本当に削除しますか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p class="link"><%= link_to "スケジュール新規作成", :new_post %></P>

<%=content_for :count do %>
  <p>
    スケジュールの件数:<%= @count%>
  </p>
<%end%>
